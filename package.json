{
  "name": "edgepilot-ai",
  "version": "0.1.0",
  "description": "Cloudflare Workers AI integration for Next.js and Edge Runtime",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "import": "./dist/next.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test",
    "example:dev": "cd examples/starter && pnpm dev",
    "example:build": "cd examples/starter && pnpm build"
  },
  "keywords": [
    "cloudflare",
    "workers-ai",
    "ai",
    "edge",
    "nextjs",
    "api",
    "backend",
    "streaming",
    "llm",
    "llama",
    "mistral"
  ],
  "author": "Audrey Klammer",
  "license": "MIT",
  "repository": "https://github.com/edgepilot/edgepilot-ai",
  "bugs": {
    "url": "https://github.com/edgepilot/edgepilot-ai/issues"
  },
  "homepage": "https://edgepilot.dev",
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.13",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "next": "^15",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "typescript": "^5"
  },
  "peerDependencies": {
    "next": ">=13.4",
    "react": "^18.0.0 || ^19.0.0-rc",
    "react-dom": "^18.0.0 || ^19.0.0-rc"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}