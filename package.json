{
  "name": "edgepilot",
  "version": "0.1.0",
  "description": "AI assistant components for Cloudflare Workers - pilot your edge AI",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./next": {
      "types": "./dist/next.d.ts",
      "import": "./dist/next.js",
      "require": "./dist/next.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build",
    "example:dev": "cd examples/starter && pnpm dev",
    "example:build": "cd examples/starter && pnpm build"
  },
  "keywords": [
    "cloudflare",
    "workers-ai",
    "nextjs",
    "edge",
    "ai",
    "llm",
    "copilot",
    "streaming",
    "vercel",
    "llama",
    "mistral"
  ],
  "author": "Audrey Klammer",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/edgepilot/edgepilot.git"
  },
  "bugs": {
    "url": "https://github.com/edgepilot/edgepilot/issues"
  },
  "homepage": "https://edgepilot.dev",
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "next": "^15",
    "typescript": "^5"
  },
  "peerDependencies": {
    "next": ">=13.4"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
